# {{ ansible_managed }}
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name matrix.{{ synapse_domain }};
    ssl_certificate "{{ synapse_homeserver.tls_certificate_path }}";
    ssl_certificate_key "{{ synapse_homeserver.tls_private_key_path }}";
    location ~ ^(/_matrix|/_synapse/client) {
        proxy_pass http://localhost:8008;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
        client_max_body_size {{ synapse_homeserver.max_upload_size }};
        proxy_http_version 1.1;
    }
}
server {
    listen 8448 ssl http2 default_server;
    listen [::]:8448 ssl http2 default_server;
    server_name {{ synapse_domain }};
    ssl_certificate "{{ synapse_homeserver.tls_certificate_path }}";
    ssl_certificate_key "{{ synapse_homeserver.tls_private_key_path }}";
    location /.well-known/matrix/client {
        return 200 '{"m.homeserver": {"base_url": "https://{{ synapse_domain }}"}}';
        default_type application/json;
        add_header Access-Control-Allow-Origin *;
    }
    location ~ ^(/_matrix) {
        proxy_pass http://localhost:8008;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Host $host;
        client_max_body_size {{ synapse_homeserver.max_upload_size }};
        proxy_http_version 1.1;
    }
}
